<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataManagement.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

             <Label Text="Select a JSON file to upload to Firebase" FontSize="20" HorizontalOptions="CenterAndExpand" Margin="0,20,0,40"/>
            <Button x:Name="UploadButton" Text="Select File" Clicked="UploadButton_Clicked" HorizontalOptions="CenterAndExpand"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

