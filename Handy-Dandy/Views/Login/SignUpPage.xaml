<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             x:Class="Handy_Dandy.Views.Login.SignUpPage"
             Title="SignUpPage">

    <StackLayout Padding="20">
        <Label Text="Sign Up" FontSize="24" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20" />

        <Entry Placeholder="First Name" Text="{Binding FirstName}" />
        <Entry Placeholder="Last Name" Text="{Binding LastName}" />

        <!-- Role Picker -->
        <Label Text="Select Role" />
        <Picker x:Name="RolePicker" ItemsSource="{Binding Roles}" SelectedItem="{Binding RoleID}" />

        <Entry Placeholder="Address" Text="{Binding Address}" />
        <Entry Placeholder="Email" Text="{Binding Email}" />
        <Entry Placeholder="Phone" Text="{Binding Phone}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />

        <Button Text="Sign Up" Command="{Binding SignUpCommand}" HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>
