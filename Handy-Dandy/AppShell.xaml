<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Handy_Dandy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.FlyoutBehavior="Disabled"
    xmlns:LoginPages="clr-namespace:Handy_Dandy.Views.Login"
    xmlns:MainPages="clr-namespace:Handy_Dandy">


    <ShellContent Title="Login Page"
        ContentTemplate="{DataTemplate LoginPages:LoginPage}"
        Route="LoginPage" />

    <ShellContent FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate LoginPages:SignUpPage}" Route="SignUpPage" />

    <ShellContent Title="Main Page"
        ContentTemplate="{DataTemplate MainPages:MainPage}"
        Route="MainPage" />

</Shell>

